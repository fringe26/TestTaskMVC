
@{
    ViewData["Title"] = "AllClients";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Clients List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="PatchClient" asp-controller="Client" class="btn btn-info form-control text-white">
            Add New Client
        </a>
    </div>
    <br />
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>

                    <th>Company</th>

                    <th>Phone</th>

                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/ClientList.js"></script>
}


